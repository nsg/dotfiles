" Vimperator config
" vim: ft=vimperator ts=4 sw=4 sts=0

set complete=lthb
set focuscontent
set titlestring="Firefox"
set followhints=1
set colorscheme desert

set! browser.urlbar.trimURLs=false
set! network.http.pipelining=true
set! general.warnOnAboutConfig=false
set! layout.spellcheckDefault=2
set! browser.fixup.alternate.enabled=false

set! extensions.lastpass.showHomepageAfterLogin=false
set! extensions.lastpass.Icon=1

mapclear
cmapclear
imapclear

nnoremap <C-l> gt
nnoremap <C-h> gT

# Hack, remove when we have 3.15.0+
# https://github.com/vimperator/vimperator-labs/issues/590
js services.services.autoCompleteSearch.class_="@mozilla.org/autocomplete/search;1?name=unifiedcomplete"

echo "ZPM core online"
